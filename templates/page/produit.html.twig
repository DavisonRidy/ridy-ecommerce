{% extends 'base.html.twig' %}

{% block title parent()~"Produit" %}

{% block body %}
    <h1>Tous les produits dispo</h1>
    <div class="proList">
        <h3>Ordinateurs portable</h3>
        <hr>
        <div class="bg-light mb-5">
            <div class="row mx-2">
            {% for pc in pcs %}
                <div class="p-0 m-1 border rounded text-center pro" style="width: 19rem">
                    <span class="border-dark bg-primary new">new</span>
                    <img src="{{ vich_uploader_asset(pc) }}" class="w-100" alt="Image du {{pc.nom}}">
                    <h4 class="my-3">{{ pc.nom |capitalize }}</h4>
                    <p class="my-4"><span class="text-info prix">{{ pc.prix }} AR</span></p>
                    <a class="btn btn-primary" href="{{ path('eco_produit_view', {'type': pc.type.id ,'id': pc.id}) }}">Voir en détail</a>
                </div>
            {% endfor %}
            {% if pcs != null %}
                <div class="p-0 m-1 border rounded text-center pro Plus" style="width: 19rem">
                    <span class="border-dark bg-primary new">new</span>
                    <img src="{{ vich_uploader_asset(pcs[0]) }}" class="w-100" alt="Image du {{pcs[0].nom}}">
