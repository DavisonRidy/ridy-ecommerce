                    <div class="PlusB">  
                        <a class="btn btn-primary" href="{{ path('eco_produit_view', {'type': pcs[0].type.id ,'id': pcs[0].id}) }}">Plus de {{pcs[0].type.genre}}s</a>
                    </div>
                    <p class="my-4"><span class="text-info prix">{{ pcs[0].prix }} AR</span></p>
                    <a class="btn btn-info">Voir en détail</a>
                </div>
            {% endif %}
            </div>
        </div>
