{% extends 'base.html.twig' %}

{% block title parent()~"Inscription" %}

{% block body %}
<div class="container">
    <h1>{% if app.user %}Enregister un utilisateur{% else %}Devenir un client!{% endif %}</h1>
    <div class="row">
        <div class="col-md-6 mx-auto">
            {{ form_start(form) }}
            <div class="d-flex">
                <div class="w-50">{{ form_row(form.nom, {attr:{placeholder:'Insérer le nom... '}}) }}</div>
                <div class="w-50">{{ form_row(form.prenom, {attr:{placeholder:'Insérer le prénom... '}}) }}</div>
            </div>
            {{ form_row(form.email, {attr:{placeholder:'Insérer l\'email... '}}) }}
            {{ form_row(form.password, {attr:{placeholder:'Insérer le mot de passe...'}}) }}
            {{ form_row(form.confirm, {attr:{placeholder:'Confirmer le mot de passe...'}}) }}
            
            <div class="{% if not app.user %}d-none{% endif %}">{{ form_row(form.roles, {label:'Sélectionner le rôle'}) }}</div>
            
        <button type="submit" class="btn btn-success">Enregistrer</button>
    {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
