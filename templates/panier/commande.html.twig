{% extends 'base.html.twig' %}

{% block title parent()~" Commande" %}

{% block body %}
<div class="container">
    <h1>Envoyer votre commande</h1>
    <div class="row">
        <div class="col-md-9 mx-auto">
            {{ form_start(form) }}
                {{ form_row(form.nom,{'attr' : {'placeholder' : 'Votre nom'}}) }}
                {{ form_row(form.prenom,{'attr' : {'placeholder' : 'Votre nom'}}) }}
                {{ form_row(form.email,{'attr' : {'placeholder' : 'Votre nom'}}) }}
                {{ form_row(form.address,{'attr' : {'placeholder' : 'Votre nom'}}) }}
                <div class="d-none">
                    {{ form_row(form.livraison) }}
                    {{ form_row(form.produit) }}
                    {{ form_row(form.produitQnt) }}
                    {{ form_row(form.totalAPayer) }}
                </div>
                <button type="submit" class="btn btn-success btn-lg">Commander</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}